include ../lib/main

-
  var site = 'morph.css Test'
  var title = " Level 2: Against authors' reset styles"

+html
  +head
    title=site+title
    link(rel="stylesheet" href="../morph.css")
    style
      :stylus
        h2
          margin 1em 20px 0.5em 0
          padding 15px 15px 15px 15%
          border-radius 0 10px 0 10px
          color #355681
          font-family sans-serif
          font-weight bold
          font-size 36px
          line-height 40px
          background-color whitesmoke

        h3
          margin 1em 20px 0.5em 0
          padding 5px 15px
          border 1px solid #fff
          border-radius 0 10px 0 10px
          color white
          font-family sans-serif
          font-size 28px
          font-weight normal
          text-shadow 0 -1px rgba(0,0,0,0.6)
          line-height 40px
          background #355681

        h4
          margin 1em 20px 0.5em 0
          border-bottom 1px solid rgba(53,86,129, 0.3)
          color #355681
          font-family sans-serif
          font-size 22px
          font-weight bold
          text-shadow 0 -1px 1px rgba(0,0,0,0.4)
          text-transform uppercase
          line-height 40px

        h5
          margin 1em 20px 0.5em 0
          color #788699
          font-family sans-serif
          font-size 18px
          font-weight bold
          line-height 20px

        p
          margin 1.5em 0
          padding 0 1em
          font-size 1.75em
          line-height 2

        figure
          border 1px solid silver
          padding 0.5em

        a
          color blue
          text-decoration none

          &:hover
            text-decoration underline

          &:active
            color red

        em
          font-weight bold
        
        cite
          color gray

        ol li
          margin-top 1em
          
          &:first-child
            margin-top 2em

        ul li
          position relative
          list-style none
          
          &:before
            position absolute
            top 0.5em
            left -1.25em
            content ""
            display block
            border-radius 3px
            width 5px
            height 5px
            overflow hidden
            background-color silver

        dt
          margin-left 1em
          font-size 1.5em
          font-weight bold

        dd
          display list-item
          list-style circle
          font-size 1.25em

        blockquote
          margin-left 1em
          padding 1em
          border-left 4px solid silver
          color gray
          font-size 2em
          font-style italic

        button
          border 1px solid blue
          border-radius 4px
          padding 0.25em 0.75em
          font-size 1.25em
          color white
          background-color blue

          &:hover
            border 1px solid blue
            color blue
            background-color white

          &:active
            position relative
            top 1px

        label
          font-weight bold

        address
          color gray

  body

    h1
      a(href="./")=site
      | #{title}

    hr

    +div(class="test")
      +div(class="__before")
        h1
          | h1
        h2
          | h2
        h3
          | h3
        h4
          | h4
        h5
          | h5
        h6
          | h6
      +div(class="__after")
        h1.div
          | h1.div
        h2.div
          | h2.div
        h3.div
          | h3.div
        h4.div
          | h4.div
        h5.div
          | h5.div
        h6.div
          | h6.div
      +bem(false)

    hr

